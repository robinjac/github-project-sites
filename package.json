{
  "name": "github-project-sites",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "tsc:watch": "tsc --watch",
    "build": "npm run build:update-daily && npm run build:generate-view-state && npm run build:daily-client",
    "build:update-daily": "esbuild src/update-daily/update_daily.ts --format=cjs --platform=node --bundle --minify --outfile=.scripts/update_daily.cjs",
    "build:generate-view-state": "esbuild src/utils/generate_view_state.ts --format=cjs --platform=node --bundle --minify --outfile=.scripts/generate_view_state.cjs",
    "start": "vite --open",
    "build:daily-client": "tsc && vite build",
    "serve": "vite preview",
    "test:generate-view-state": "npm run build:generate-view-state && node .scripts/generate_view_state.cjs ./src/daily-client/test",
    "test": "tsc && npm run test:generate-view-state",
    "generate-view-state": "npm run build:generate-view-state && node .scripts/generate_view_state.cjs"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "autoprefixer": "^10.3.1",
    "esbuild": "^0.12.20",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vite-plugin-elm": "^2.4.2"
  }
}
